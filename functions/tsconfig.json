{
  "compilerOptions": {
    "module": "NodeNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true, // Allows importing .json files
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "forceConsistentCasingInFileNames": true, // Prevent OS-specific case issues
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
